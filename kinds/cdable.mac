command_prompt:
	##first_item_index	= 0;
	$$text=dllfuncstrw(#g_dll_ohtorii_tools,"GetSelectionActionPath",##first_item_index);
	execmacro $g_root_macro_directory+"\\internal\\util_get_parent_folder_name.mac",$$text;
	$$parent_folder=getresultex(-1);
	runex "cmd"
			, 0 			//sync	  0:async 1:sync
			, 0, "" 		//stdin   0:none 1:auto 2:file 3:(reserve) 4:all 5:select
			, 0, "" 		//stdout  0:none 1:auto 2:file 3:add file  4:new 5:insert 6:replace
			, 0, "" 		//stderr  0:none 1:=out 2:file 3:add file  4:new 5:insert 6:replace
			, 2, $$parent_folder 		//folder  0:none 1:current 2:specify 3:(reserve) 4:exe's folder
			, 1 			//show	  0:auto 1:show 2:hide
			, 1 			//nodraw  0:draw 1:no draw
			, 0 			//unicode 0:ansi 2:unicode
			;
	return "1";


explorer:
	##first_item_index	= 0;
	$$text=dllfuncstrw(#g_dll_ohtorii_tools,"GetSelectionActionPath",##first_item_index);
	execmacro $g_root_macro_directory+"\\internal\\util_get_parent_folder_name.mac",$$text;
	$$parent_folder=getresultex(-1);
	runex "explorer " + "\""+$$parent_folder+"\""
			, 0 			//sync	  0:async 1:sync
			, 0, "" 		//stdin   0:none 1:auto 2:file 3:(reserve) 4:all 5:select
			, 0, "" 		//stdout  0:none 1:auto 2:file 3:add file  4:new 5:insert 6:replace
			, 0, "" 		//stderr  0:none 1:=out 2:file 3:add file  4:new 5:insert 6:replace
			, 0,"" 		//folder  0:none 1:current 2:specify 3:(reserve) 4:exe's folder
			, 1 			//show	  0:auto 1:show 2:hide
			, 1 			//nodraw  0:draw 1:no draw
			, 0 			//unicode 0:ansi 2:unicode
			;
	return "1";


hidemaru_filer:
	call find_hidemaru_filer;
	$$path = $$return;
	if($$path==""){
		return "0";
	}
	##first_item_index	= 0;
	$$text=dllfuncstrw(#g_dll_ohtorii_tools,"GetSelectionActionPath",##first_item_index);
	execmacro $g_root_macro_directory+"\\internal\\util_get_parent_folder_name.mac",$$text;
	$$parent_folder=getresultex(-1);

	runex $$path+" " +"\""+$$parent_folder+"\""
			, 0 			//sync	  0:async 1:sync
			, 0, "" 		//stdin   0:none 1:auto 2:file 3:(reserve) 4:all 5:select
			, 0, "" 		//stdout  0:none 1:auto 2:file 3:add file  4:new 5:insert 6:replace
			, 0, "" 		//stderr  0:none 1:=out 2:file 3:add file  4:new 5:insert 6:replace
			, 0, "" 		//folder  0:none 1:current 2:specify 3:(reserve) 4:exe's folder
			, 1 			//show	  0:auto 1:show 2:hide
			, 1 			//nodraw  0:draw 1:no draw
			, 0 			//unicode 0:ansi 2:unicode
			;
	return "1";


file:
	##first_item_index	= 0;
	$$text=dllfuncstrw(#g_dll_ohtorii_tools,"GetSelectionActionPath",##first_item_index);
	execmacro $g_root_macro_directory+"\\internal\\util_get_parent_folder_name.mac",$$text;
	$$parent_folder=getresultex(-1)+"\\";
	$$source="file";

	debuginfo "-- file --";
	debuginfo "  $$text="+$$text;
	debuginfo "  $$parent_folder="+$$parent_folder;

	##ret=dllfuncw(#g_dll_ohtorii_tools,"StartCandidate",$$source,$$parent_folder);
	if(##ret){
		return "1";
	}
	return "0";


narrow:
	##first_item_index	= 0;
	$$folder=dllfuncstrw(#g_dll_ohtorii_tools,"GetSelectionActionPath",##first_item_index);
	$$source="file";
	##ret=dllfuncw(#g_dll_ohtorii_tools,"StartCandidate",$$source,$$folder);
	if(##ret){
		return "1";
	}
	return "0";


