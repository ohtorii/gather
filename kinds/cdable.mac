$g_root_macro_directory =getstaticvariable("$unity.root_macro_directory", 1);

#g_dll_ohtorii_tools=val(getarg(0));
$label=getarg(1);
$arg1=getarg(2);
$arg2=getarg(3);
$arg3=getarg(4);
$arg4=getarg(5);
$arg5=getarg(6);
call $label, $arg1, $arg2, $arg3, $arg4, $arg5 ;
endmacro $$return;



get_property:
	return R"([property]
name=cdable
default_action=hidemaru_filer
base_kind=

[action.command_prompt]
function=command_prompt
description=Open the file at the command prompt.
is_quit=true
is_multi_selectable=false

[action.explorer]
function=explorer
description=Open the file at the Explorer.
is_quit=true
is_multi_selectable=false

[action.hidemaru_filer]
function=hidemaru_filer
description=Open the file at the Hidemaru filer classic.
is_quit=true
is_multi_selectable=false

[action.file]
function=file
description=Open this directory by file source.
is_quit=false
is_multi_selectable=false
is_start=true

[action.narrow]
function=narrow
description=Narrowing candidates by directory name
is_quit=false
is_multi_selectable=false
is_start=true
)";


do_action:
	$$action=$$1;
	call $$action;
	return $$return;

