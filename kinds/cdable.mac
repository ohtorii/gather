find_hidemaru_filer:
	$$x64="C:\\Program Files\\HmFilerClassic\\HmFilerClassic.exe";
	$$x86="C:\\Program Files (x86)\\HmFilerClassic\\HmFilerClassic.exe";
	if(existfile($$x64)){
		return $$x64;
	}
	if(existfile($$x86)){
		return $$x86;
	}

	return "";


GetPathName:
	##index=##1;
	$$text=dllfuncstrw(#g_dll_ohtorii_tools,"GetSelectionActionFileName",##index);
	if($$text!=""){
		return $$text;
	}
	return dllfuncstrw(#g_dll_ohtorii_tools,"GetSelectionActionDirectoryName",##index);
